    include-dirs:        include
    install-includes:    HsVersions.h Bytecodes.h
    exposed:             True
    buildable:           True
    build-tools:         alex
                       , happy
    if flag(debug)
       ghc-options:      -DDEBUG

executable eta
    if flag(warnings)
      ghc-options:       -Wall
    hs-source-dirs:      eta
    main-is:             Main.hs
    default-language:    Haskell2010
    other-modules:       GhciMonad
                         GhciTags
                         InteractiveUI
    build-depends:       array
                       , base >= 4.7 && < 5
                       , bytestring
                       , deepseq
                       , directory
                       , filepath
                       , ghc-paths == 0.1.0.9
                       , haskeline
                       , process
                       , transformers
                       , eta

    if os(windows)
        build-depends:   Win32
    else
        build-depends:   unix


executable eta-build
    hs-source-dirs:      shake
    main-is:             Build.hs
    default-language:    Haskell2010
    build-depends:       base >= 4.7 && < 5
                       , shake
                       , directory
                       , Cabal
                       , containers >= 0.5

test-suite eta-packages
    type:                exitcode-stdio-1.0
    hs-source-dirs:      tests/packages
    main-is:             Test.hs
    default-language:    Haskell2010
    build-depends:       base >= 4.7 && < 5
                       , turtle
